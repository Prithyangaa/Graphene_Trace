@model GrapheneTrace.Model.SystemAnalyticsViewModel

@{
    ViewData["Title"] = "System Analytics";
}

<link rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<div class="container mt-4">
    <a href="/Admin/Dashboard" class="text-muted small">
        <i class="bi bi-chevron-left"></i> Back to Dashboard
    </a>

    <h3 class="mt-2 mb-4">System Analytics & Reports</h3>

    <div class="row g-4">

        <!-- Usage Statistics -->
        <div class="col-md-6">
            <div class="card p-3 shadow-sm rounded-4">
                <div class="d-flex justify-content-between">
                    <strong>Usage Statistics</strong>
                </div>

                <canvas id="usageChart" style="height: 200px"></canvas>

                <a href="/Admin/ExportReport" class="btn btn-outline-dark mt-3 w-100">
                    <i class="bi bi-download"></i> Export Report
                </a>
            </div>
        </div>

        <!-- System Performance -->
        <div class="col-md-6">
            <div class="card p-3 shadow-sm rounded-4">
                <div class="d-flex justify-content-between">
                    <strong>System Performance</strong>
                </div>

                <canvas id="performanceChart" style="height: 200px"></canvas>

                <a href="/Admin/ExportData" class="btn btn-outline-dark mt-3 w-100">
                    <i class="bi bi-download"></i> Export Data
                </a>
            </div>
        </div>
    </div>

    <!-- Key Metrics Section -->
    <div class="card shadow-sm rounded-4 p-4 mt-4">
        <h6 class="text-muted mb-3">Key Metrics</h6>

        <div class="row text-center">
            <div class="col-md-3">
                <div class="fw-bold">@Model.TotalUsers</div>
                <small>Total Users</small>
            </div>

            <div class="col-md-3">
                <div class="fw-bold">@Model.ActiveDevices</div>
                <small>Active Devices</small>
            </div>

            <div class="col-md-3">
                <div class="fw-bold">@Model.AlertsToday</div>
                <small>Alerts Today</small>
            </div>

            <div class="col-md-3">
                <div class="fw-bold">@Model.SystemUptime</div>
                <small>System Uptime</small>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // USAGE CHART
    new Chart(document.getElementById("usageChart"), {
        type: 'bar',
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.UsageLabels)),
            datasets: [{
                label: 'Usage',
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.UsageCounts)),
                backgroundColor: 'rgba(99, 102, 241, 0.6)'
            }]
        }
    });

    // PERFORMANCE CHART
    new Chart(document.getElementById("performanceChart"), {
        type: 'line',
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.PerformanceLabels)),
            datasets: [{
                label: 'Performance',
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.PerformanceCounts)),
                borderColor: 'rgba(34, 197, 94, 0.8)',
                tension: 0.3
            }]
        }
    });
</script>

