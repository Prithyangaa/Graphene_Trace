@{
    ViewData["Title"] = "Admin Dashboard";

    dynamic system = ViewBag.SystemStatus ?? new { Health = "Unknown", Uptime = "0 hrs", ActiveDevices = 0 };
    dynamic stats = ViewBag.UserStats ?? new { TotalUsers = 0, Patients = 0, Clinicians = 0, Admins = 0 };
}


<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row mb-4">
        <!-- System Overview -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4 rounded-4">
                <h5 class="mb-3">System Overview</h5>
                <div class="text-center py-5">
                    <i class="bi bi-hdd-network display-4 text-secondary"></i>
                    <p class="mt-3 mb-1"><strong>System Health:</strong> @system.Health</p>
                    <p class="mb-1"><strong>Uptime:</strong> @system.Uptime</p>
                    <p class="mb-1"><strong>Active Devices:</strong> @system.ActiveDevices</p>
                </div>
            </div>
        </div>

        <!-- User Management -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4 rounded-4">
                <h5 class="mb-3">User Management</h5>
                <div class="text-center py-5">
                    <i class="bi bi-people display-4 text-secondary"></i>
                    <p class="mt-3 mb-1"><strong>Total Users:</strong> @stats.TotalUsers</p>
                    <p class="mb-1"><strong>Patients:</strong> @stats.Patients</p>
                    <p class="mb-1"><strong>Clinicians:</strong> @stats.Clinicians</p>
                    <p class="mb-1"><strong>Admins:</strong> @stats.Admins</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Lower grid -->
    <div class="row g-3">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm rounded-4">
                <h6>Devices</h6>
                <p>Active: 127<br>Offline: 6</p>
                <a href="#" class="text-primary small">Manage all →</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm rounded-4">
                <h6>System Alerts</h6>
                <p>Critical: 0<br>Warnings: 3</p>
                <a href="#" class="text-primary small">View logs →</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm rounded-4">
                <h6>Analytics</h6>
                <ul class="list-unstyled small">
                    <li>• Usage Stats</li>
                    <li>• System Performance</li>
                    <li>• Export Reports</li>
                </ul>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm rounded-4">
                <h6>Settings</h6>
                <ul class="list-unstyled small">
                    <li>• System Config</li>
                    <li>• Security</li>
                    <li>• Backup & Restore</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Optional Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

