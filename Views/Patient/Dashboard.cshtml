@model GrapheneTrace.Model.Patient

@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container py-4">
    <h2 class="text-center mb-4">Welcome, @Model.FullName</h2>

    <div class="row g-4">

        <!-- Profile -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light"><strong>Your Profile</strong></div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.FullName</p>
                    <p><strong>Age:</strong> @Model.Age</p>
                    <p><strong>Gender:</strong> @Model.Gender</p>
                    <p><strong>Contact:</strong> @Model.ContactNumber</p>
                    <p><strong>Status:</strong> @Model.CurrentStatus</p>
                    <p><strong>Risk Level:</strong> @Model.RiskLevel</p>
                    <p><strong>Created:</strong> @Model.CreatedAt.ToShortDateString()</p>
                </div>
            </div>
        </div>

        <!-- Messages -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light"><strong>Messages</strong></div>
                <div class="card-body">
                    <textarea class="form-control mb-3" rows="3"
                        placeholder="Send a message to your clinician..."></textarea>
                    <button class="btn btn-primary w-100">Send</button>
                </div>
            </div>
        </div>

    </div>

    <div class="mt-4">
        <a href="/Auth/Logout" class="btn btn-danger w-100">Logout</a>
    </div>
</div>