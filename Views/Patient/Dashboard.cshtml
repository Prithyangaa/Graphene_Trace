@model GrapheneTrace.Model.PatientDashboardViewModel

@{
    ViewData["Title"] = "Patient Dashboard";
    string initials = string.Join("", (Model.FullName ?? "")
    .Split(' ', StringSplitOptions.RemoveEmptyEntries)
    .Take(2)
    .Select(s => s[0]))
    .ToUpper();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<style>
    .gt-page {
        background: #f5f7fb;
        min-height: 100vh;
        padding: 1.5rem 0 3rem;
    }

    .gt-card {
        background: #ffffff;
        border-radius: 18px;
        border: 1px solid #e3e7f0;
        padding: 1.25rem;
        box-shadow: 0 8px 20px rgba(15, 23, 42, .03);
        transition: transform .15s ease, box-shadow .15s ease;
        cursor: pointer;
    }

    .gt-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 26px rgba(15, 23, 42, .08);
    }

    .gt-card-header {
        font-size: .9rem;
        font-weight: 600;
        color: #64748b;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: .75rem;
    }

    .gt-badge-live {
        font-size: .75rem;
        padding: .15rem .55rem;
        border-radius: 999px;
        background: #dcfce7;
        color: #16a34a;
        display: inline-flex;
        align-items: center;
        gap: .25rem;
    }

    .gt-heatmap-preview {
        border-radius: 16px;
        background: linear-gradient(135deg, #e0f2fe, #fae8ff, #fef3c7);
        height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        color: #64748b;
        margin-bottom: .75rem;
    }

    .gt-heatmap-preview i {
        font-size: 2.4rem;
        margin-bottom: .35rem;
    }

    .gt-stat-label {
        font-size: .78rem;
        text-transform: uppercase;
        letter-spacing: .06em;
        color: #94a3b8;
    }

    .gt-stat-value {
        font-size: 1rem;
        font-weight: 600;
        color: #0f172a;
    }

    .gt-alert-chip {
        display: inline-flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        border-radius: 12px;
        padding: .6rem .75rem;
        background: #f8fafc;
        margin-bottom: .4rem;
        font-size: .85rem;
    }

    .gt-alert-chip small {
        color: #94a3b8;
    }

    .gt-pill-critical {
        color: #b91c1c;
        background: #fee2e2;
        padding: .15rem .5rem;
        border-radius: 999px;
        font-size: .7rem;
    }

    .gt-pill-warning {
        color: #854d0e;
        background: #fef3c7;
        padding: .15rem .5rem;
        border-radius: 999px;
        font-size: .7rem;
    }

    .gt-pill-normal {
        color: #166534;
        background: #dcfce7;
        padding: .15rem .5rem;
        border-radius: 999px;
        font-size: .7rem;
    }

    .gt-avatar {
        width: 68px;
        height: 68px;
        border-radius: 50%;
        background: #e5e7eb;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: #4b5563;
        font-size: 1.3rem;
        margin-bottom: .75rem;
    }

    .gt-link-sm {
        font-size: .8rem;
        color: #6366f1;
    }
</style>

<div class="gt-page">
    <div class="container">

        <!-- Top bar -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <div class="text-muted small">Graphene Trace</div>
                <h3 class="mt-1 mb-0">Patient Dashboard</h3>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="text-muted small me-3">
                    Logged in as <strong>@Model.FullName</strong>
                </span>
                <a href="@Url.Action("Logout", "Auth")" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </a>
            </div>
        </div>

        <!-- TOP ROW: Live & Past Heatmap -->
        <div class="row g-4 mb-4">

            <!-- Current Live Heat Map -->
            <div class="col-lg-6">
                <div class="gt-card" onclick="location.href='@Url.Action("LiveHeatmap", "Patient")'">
                    <div class="gt-card-header">
                        <span>Current Live Heat Map</span>
                        <span class="gt-badge-live">
                            <i class="bi bi-circle-fill" style="font-size:.45rem;"></i> Live
                        </span>
                    </div>

                    <div class="gt-heatmap-preview" style="padding:0;">
                        @if (Model.HasHeatmapData)
                        {
                            <img src="@Model.HeatmapImageBase64"
                                style="width:100%; height:220px; border-radius:16px; object-fit:contain;" />
                        }
                        else
                        {
                            <i class="bi bi-activity"></i>
                            <div>No sensor data connected</div>
                        }
                    </div>


                    <div class="row text-center">
                        <div class="col-4">
                            <div class="gt-stat-label">Peak Pressure Index</div>
                            <div class="gt-stat-value">@Model.PeakPressureIndex.ToString("0") <span
                                    class="text-muted">mmHg</span></div>
                        </div>
                        <div class="col-4">
                            <div class="gt-stat-label">Contact Area %</div>
                            <div class="gt-stat-value">@Model.ContactAreaPercent.ToString("0")%</div>
                        </div>
                        <div class="col-4">
                            <div class="gt-stat-label">Status</div>
                            @{
                                string statusClass = Model.PressureStatus switch
                                {
                                    "Critical" => "text-danger",
                                    "High" => "text-warning",
                                    "Medium" => "text-primary",
                                    _ => "text-success"
                                };
                            }
                            <div class="gt-stat-value @statusClass">
                                @Model.PressureStatus
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="gt-stat-label">Variability</div>
                            <div class="gt-stat-value">@Model.PressureVariability.ToString("0.0")</div>
                        </div>

                        <div class="col-4">
                            <div class="gt-stat-label">Stability Index</div>
                            <div class="gt-stat-value">@Model.StabilityIndex.ToString("0.00")</div>
                        </div>

                        <div class="col-4">
                            <div class="gt-stat-label">Movement Index</div>
                            <div class="gt-stat-value">@Model.MovementIndex.ToString("0.00")</div>
                        </div>

                        <div class="col-12 mt-2">
                            <div class="gt-stat-label">Hotspots</div>
                            <div class="gt-stat-value">@Model.HotspotCount</div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Past Heat Map -->
            <div class="col-lg-6">
                <div class="gt-card" onclick="location.href='@Url.Action("PastHeatmap", "Patient")'">
                    <div class="gt-card-header">
                        <span>Past Heat Map</span>
                        <span class="text-muted small">View historical pressure data</span>
                    </div>

                    <div class="gt-heatmap-preview">
                        <i class="bi bi-activity"></i>
                        <div>Past Heat Map: Slide through history</div>
                    </div>

                    <div>
                        <div class="gt-stat-label mb-1">Time Range</div>
                        <div class="progress" style="height:4px;">
                            <div class="progress-bar" style="width: 25%;"></div>
                        </div>
                        <div class="d-flex justify-content-between mt-1 small text-muted">
                            <span>Live</span><span>1h</span><span>6h</span><span>24h</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- SECOND ROW: Alerts + Profile -->
        <div class="row g-4 mb-4">
            <!-- Notifications & Alerts -->
            <div class="col-lg-6">
                <div class="gt-card" onclick="location.href='@Url.Action("Alerts", "Patient")'">
                    <div class="gt-card-header">
                        <span>Notifications &amp; Alerts</span>
                        <span class="gt-link-sm">View all</span>
                    </div>

                    @if (Model.RecentAlerts.Any())
                    {
                        @foreach (var a in Model.RecentAlerts)
                        {
                            var pillClass = a.Severity.ToLower() switch
                            {
                                "critical" => "gt-pill-critical",
                                "warning" => "gt-pill-warning",
                                _ => "gt-pill-normal"
                            };

                            <div class="gt-alert-chip">
                                <div>
                                    <div class="fw-semibold">@a.AlertType</div>
                                    <small>@a.AlertDescription</small>
                                </div>
                                <div class="text-end">
                                    <div class="@pillClass text-capitalize">@a.Severity</div>
                                    <small>@a.CreatedAt.ToLocalTime().ToString("HH:mm")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">No alerts yet. You're all clear!</p>
                    }
                </div>
            </div>

            <!-- Profile -->
            <div class="col-lg-6">
                <div class="gt-card" onclick="location.href='@Url.Action("Profile", "Patient")'">
                    <div class="gt-card-header">
                        <span>Profile</span>
                        <span class="gt-link-sm">Open profile</span>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="gt-avatar me-3">@initials</div>
                        <div>
                            <div class="fw-semibold">@Model.FullName</div>
                            <div class="text-muted small">@Model.Age ?? 0 years • @Model.Gender</div>
                            <div class="text-muted small">Clinician: @Model.ClinicianName ?? "Not assigned"</div>
                        </div>
                    </div>

                    <div class="row small">
                        <div class="col-6 mb-2">
                            <div class="gt-stat-label">User ID</div>
                            <div class="gt-stat-value text-muted">#P-@Model.PatientId.ToString("D4")</div>
                        </div>
                        <div class="col-6 mb-2">
                            <div class="gt-stat-label">Risk Level</div>
                            <div class="gt-stat-value">@Model.RiskLevel</div>
                        </div>
                        <div class="col-6">
                            <div class="gt-stat-label">Status</div>
                            <div class="gt-stat-value">@Model.CurrentStatus</div>
                        </div>
                        <div class="col-6">
                            <div class="gt-stat-label">Contact</div>
                            <div class="gt-stat-value">@Model.ContactNumber</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- THIRD ROW: Settings + Messages -->
        <div class="row g-4">
            <!-- Settings -->
            <div class="col-lg-6">
                <div class="gt-card" onclick="location.href='@Url.Action("Settings", "Patient")'">
                    <div class="gt-card-header">
                        <span>Settings</span>
                        <span class="gt-link-sm">Open settings</span>
                    </div>

                    <ul class="list-unstyled mb-0 small">
                        <li class="d-flex justify-content-between align-items-center py-1">
                            <span><i class="bi bi-sliders me-2"></i>App Preferences</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-1">
                            <span><i class="bi bi-universal-access me-2"></i>Accessibility Settings</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-1">
                            <span><i class="bi bi-shield-lock me-2"></i>Privacy Policy</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </li>
                    </ul>

                    <hr class="my-2" />
                    <button class="btn btn-danger btn-sm w-100"
                        onclick="location.href='@Url.Action("Logout", "Auth")'; event.stopPropagation();">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </button>
                </div>
            </div>

            <!-- Clinician Messages -->
            <div class="col-lg-6">
                <div class="gt-card" onclick="location.href='@Url.Action("Messages", "Patient")'">
                    <div class="gt-card-header">
                        <span>Clinician Messages</span>
                        <span class="gt-link-sm">View conversation</span>
                    </div>

                    @if (Model.RecentMessages.Any())
                    {
                        @foreach (var m in Model.RecentMessages)
                        {
                            <div class="mb-2 p-2 rounded-3" style="background:#f8fafc;">
                                <div class="small text-muted">
                                    @(m.FromClinician ? "Clinician" : "You")
                                    · @m.CreatedAt.ToLocalTime().ToString("HH:mm")
                                </div>
                                <div>@m.Content</div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-2">No messages yet. Your clinician will appear here.</p>
                    }

                    <div class="mt-2">
                        <span class="badge bg-light text-muted border">
                            Click to open full message view
                        </span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>