@model GrapheneTrace.Model.Patient
@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container py-4">
    <h2 class="text-center mb-4">Patient Dashboard</h2>

    <div class="row">
        <!-- Current Heart Map -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <strong>Current Live Heart Map</strong>
                </div>
                <div class="card-body text-center">
                    <img src="@Model.CurrentHeartRateMap" alt="Current Heart Map" class="img-fluid rounded mb-3">
                    <a asp-controller="Patient" asp-action="LiveHeatMap" class="btn btn-outline-primary">
                        View Live Heat Map
                    </a>
                </div>
            </div>
        </div>

        <!-- Past Heart Map -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <strong>Past Heart Map</strong>
                </div>
                <div class="card-body text-center">
                    <img src="@Model.PastHeartRateMap" alt="Past Heart Map" class="img-fluid rounded">
                    <a asp-controller="Patient" asp-action="PastHeatMap" class="btn btn-outline-primary mt-2">
                      View Past Heat Map
                   </a>

                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Notifications -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light"><strong>Notifications & Alerts</strong></div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var note in Model.Notifications)
                        {
                            <li class="list-group-item">@note</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Profile -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light"><strong>Profile</strong></div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.FullName</p>
                    <p><strong>Gender:</strong> @Model.Gender</p>
                    <p><strong>DOB:</strong> @Model.DOB.ToShortDateString()</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.Phone</p>
                    <p><strong>Address:</strong> @Model.Address</p>
                </div>
            </div>
        </div>

        <!-- Chat -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light"><strong>Clinician Messages</strong></div>
                <div class="card-body">
                    <div class="mb-3">
                        <textarea class="form-control" rows="3" placeholder="Type your message..."></textarea>
                    </div>
                    <button class="btn btn-primary w-100">Send</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Settings -->
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light"><strong>Settings</strong></div>
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <a href="#" class="btn btn-outline-secondary me-2">App Preferences</a>
                        <a href="#" class="btn btn-outline-secondary me-2">Accessibility</a>
                    </div>
                    <button class="btn btn-danger">Logout</button>
                </div>
            </div>
        </div>
    </div>
</div>
