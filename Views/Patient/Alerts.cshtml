@model IEnumerable<GrapheneTrace.Model.Alert>

@{
    ViewData["Title"] = "Notifications & Alerts";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<div class="gt-page">
    <div class="container py-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <nav class="small text-muted mb-1">
                    Dashboard / <span class="text-body">Notifications &amp; Alerts</span>
                </nav>
                <h4 class="mb-0">Alert History</h4>
            </div>
            <a href="@Url.Action("Dashboard","Patient")" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <div class="gt-card" style="cursor:default;">
            <div class="d-flex justify-content-between mb-3">
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-dark">All</button>
                    <button class="btn btn-light">Today</button>
                    <button class="btn btn-light">Last 7 Days</button>
                    <button class="btn btn-light">Unread</button>
                </div>
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-filter"></i> Filter
                </button>
            </div>

            @foreach (var a in Model)
            {
                var pillClass = a.Severity.ToLower() switch
                {
                    "critical" => "gt-pill-critical",
                    "warning" => "gt-pill-warning",
                    "info" => "gt-pill-normal",
                    _ => "gt-pill-normal"
                };

                <div class="gt-alert-chip">
                    <div>
                        <div class="fw-semibold">@a.AlertType</div>
                        <small class="text-muted">@a.AlertDescription</small>
                    </div>
                    <div class="text-end">
                        <div class="@pillClass text-capitalize">@a.Severity</div>
                        <small>@a.CreatedAt.ToLocalTime().ToString("MMM d, HH:mm")</small>
                        <div><button class="btn btn-link btn-sm p-0 small">Mark as read</button></div>
                    </div>
                </div>
            }

            @if (!Model.Any())
            {
                <p class="text-muted mb-0">No alerts yet.</p>
            }
        </div>
    </div>
</div>
