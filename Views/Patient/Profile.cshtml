@model GrapheneTrace.Model.Patient

@{
    ViewData["Title"] = "Profile";
    string initials = string.Join("", (Model.FullName ?? "")
    .Split(' ', StringSplitOptions.RemoveEmptyEntries)
    .Take(2)
    .Select(s => s[0]))
    .ToUpper();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<div class="gt-page">
    <div class="container py-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <nav class="small text-muted mb-1">
                    Dashboard / <span class="text-body">Profile</span>
                </nav>
                <h4 class="mb-0">Profile</h4>
            </div>
            <a href="@Url.Action("Dashboard", "Patient")" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="gt-card" style="cursor:default;">
                    <div class="d-flex justify-content-between mb-3">
                        <div class="d-flex align-items-center">
                            <div class="gt-avatar me-3">@initials</div>
                            <div>
                                <div class="fw-semibold">@Model.FullName</div>
                                <div class="small text-muted">Age @Model.Age</div>
                            </div>
                        </div>
                        <button class="btn btn-dark btn-sm">Edit Profile</button>
                    </div>

                    <div class="row small mb-3">
                        <div class="col-md-6 mb-2">
                            <label class="text-muted d-block">Email</label>
                            <div>@(ViewBag.Email ?? "â€”")</div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="text-muted d-block">Phone Number</label>
                            <div>@Model.ContactNumber</div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="text-muted d-block">Risk Level</label>
                            <div>@Model.RiskLevel</div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="text-muted d-block">Status</label>
                            <div>@Model.CurrentStatus</div>
                        </div>
                    </div>

                    <hr />
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="fw-semibold">Health History</div>
                        <button class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-box-arrow-up"></i> Export Report
                        </button>
                    </div>
                    <p class="text-muted small mb-0">
                        (You can populate this with alerts or other events later.)
                    </p>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="gt-card mb-3" style="cursor:default;">
                    <div class="fw-semibold mb-2">Account Details</div>
                    <div class="small mb-1">
                        <span class="text-muted d-block">User ID</span>
                        <strong>#P-@Model.PatientId.ToString("D4")</strong>
                    </div>
                    <div class="small mb-1">
                        <span class="text-muted d-block">Account Created</span>
                        <strong>@Model.CreatedAt.ToLocalTime().ToString("MMMM d, yyyy")</strong>
                    </div>
                    <div class="small mb-1">
                        <span class="text-muted d-block">Assigned Clinician</span>
                        <strong>@(ViewBag.ClinicianName ?? "Not assigned")</strong><br />
                        <span class="text-muted">@ViewBag.ClinicianSpeciality</span>
                    </div>
                    <div class="small mb-1">
                        <span class="text-muted d-block">Monitoring Status</span>
                        <span class="gt-pill-normal mt-1 d-inline-block">Active</span>
                    </div>
                </div>

                <div class="gt-card" style="cursor:default;">
                    <div class="fw-semibold mb-2">Quick Stats</div>
                    <div class="small mb-1">
                        <span class="text-muted d-block">Total Alerts</span>
                        <strong>@ViewBag.TotalAlerts</strong>
                    </div>
                    <div class="small mb-1">
                        <span class="text-muted d-block">Days Monitored</span>
                        <strong>@ViewBag.DaysMonitored</strong>
                    </div>
                    <div class="small mb-1">
                        <span class="text-muted d-block">Avg. Daily Pressure</span>
                        <strong>@((double)ViewBag.AvgDailyPressure)</strong> mmHg
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>