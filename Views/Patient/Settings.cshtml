@{
    ViewData["Title"] = "Settings";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<div class="gt-page">
    <div class="container py-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Settings</h4>
            <a href="@Url.Action("Dashboard", "Patient")" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <div class="gt-card mb-3" style="cursor:default;">
            <h6 class="mb-3"><i class="bi bi-sliders me-2"></i>App Preferences</h6>
            <div class="form-check form-switch mb-2">
                <input class="form-check-input" type="checkbox" id="darkModeSwitch">
                <label class="form-check-label" for="darkModeSwitch">Dark Mode</label>
            </div>
            <div class="form-check form-switch mb-2">
                <input class="form-check-input" type="checkbox" id="pushSwitch" checked>
                <label class="form-check-label" for="pushSwitch">Push Notifications</label>
            </div>
            <div class="form-check form-switch mb-2">
                <input class="form-check-input" type="checkbox" id="soundSwitch" checked>
                <label class="form-check-label" for="soundSwitch">Alert Sounds</label>
            </div>
            <div class="mt-3">
                <label class="text-muted small d-block">Language</label>
                <select class="form-select form-select-sm" style="max-width:200px;">
                    <option>English</option>
                </select>
            </div>
        </div>

        <div class="gt-card mb-3" style="cursor:default;">
            <h6 class="mb-3"><i class="bi bi-universal-access me-2"></i>Accessibility Settings</h6>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">
                High Contrast Mode
            </button>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">
                Large Text
            </button>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">
                Screen Reader Support
            </button>
        </div>

        <div class="gt-card mb-3" style="cursor:default;">
            <h6 class="mb-3"><i class="bi bi-shield-lock me-2"></i>Privacy &amp; Data</h6>
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="shareDataSwitch" checked>
                <label class="form-check-label" for="shareDataSwitch">
                    Data Sharing with Clinicians
                </label>
            </div>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">View Privacy Policy</button>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">Data Usage Agreement</button>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">Export My Data</button>
            <button class="btn btn-outline-danger btn-sm w-100 text-start">Delete My Account</button>
        </div>

        <div class="gt-card mb-3" style="cursor:default;">
            <h6 class="mb-3">About &amp; Support</h6>
            <div class="small mb-1">
                <span class="text-muted d-block">App Version</span>
                <strong>1.0.0 (Beta)</strong>
            </div>
            <div class="small mb-3">
                <span class="text-muted d-block">System Status</span>
                <span class="gt-pill-normal mt-1 d-inline-block">All Systems Operational</span>
            </div>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">Help &amp; Documentation</button>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">Contact Support</button>
            <button class="btn btn-light btn-sm mb-2 w-100 text-start">Send Feedback</button>
        </div>

        <button class="btn btn-danger w-100" onclick="location.href='@Url.Action("Logout", "Auth")'">
            <i class="bi bi-box-arrow-right me-1"></i> Logout
        </button>
    </div>
</div>