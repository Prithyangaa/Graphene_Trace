@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-box">
        <div class="logo">GT</div>
        <h2>Graphene Trace</h2>
        <p>Sensore System - Pressure Ulcer Monitoring</p>

        <form asp-action="Login" method="post">
            <label>Email</label>
            <input name="Email" type="email" class="input-box" required placeholder="example@gmail.com" />

            <label>Password</label>
            <input name="Password" type="password" class="input-box" required />

            <button type="submit" class="btn">Login</button>
        </form>

        <p class="register-link">Don't have an account?
            <a asp-action="Register">Register</a>
        </p>
    </div>
</div>