@{
    ViewData["Title"] = "Clinician Dashboard";
}

<!-- ===== Top Navigation Bar ===== -->
<header style="display: flex; justify-content: space-between; align-items: center; padding: 10px 20px; border-bottom: 1px solid #ccc;">
    <div style="display: flex; align-items: center; gap: 10px;">
        <h3 style="margin: 0;">Graphene Trace</h3>
        <span style="font-size: 1.2rem; color: gray;">Clinician Dashboard</span>
    </div>

    <div style="display: flex; gap: 20px; align-items: center;">
        <i class="bi bi-bell" style="font-size: 1.5rem; cursor: pointer;"></i>
        <i class="bi bi-person" style="font-size: 1.5rem; cursor: pointer;"></i>
        <i class="bi bi-box-arrow-right" style="font-size: 1.5rem; cursor: pointer;"></i>
    </div>
</header>

<!-- ===== Search Bar ===== -->
<div class="p-3 border-bottom bg-light">
    <input type="text" class="form-control" placeholder="üîç Browse Patient - Search by name or ID..." />
</div>

<!-- ===== Priority Patient Map ===== -->
